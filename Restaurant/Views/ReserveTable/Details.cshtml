@{
	BookTableViewModel bookTableViewModel = Model;
 }
@{
    ViewData["Title"] = "Booking Details";
}

<h2>Booking Details</h2>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Booking Date</dt>
        <dd class="col-sm-10">@Model.BookingDate.ToString("f")</dd>

        <dt class="col-sm-2">Guests</dt>
        <dd class="col-sm-10">@Model.NumberOfGuests</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
